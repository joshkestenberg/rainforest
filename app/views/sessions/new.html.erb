<div class="page title">
  <h1>Sign In</h1>
</div>

<main>

  <div class="sign_in_form">
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div class="buttons">
        <%= submit_tag "Log In" %>
      </div>
    <%end%>
  </div>
</main>
